<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TokeroApp.DcaCalculatorPage"
             Title="DCA Calculator">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Select Cryptocurrency" FontAttributes="Bold" />
            <CollectionView x:Name="cryptoCollection" SelectionMode="Multiple">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <!-- Checkbox -->
                                <ColumnDefinition Width="2*" />
                                <!-- Coin Name -->
                                <ColumnDefinition Width="1.5*" />
                                <!-- Investment Entry -->
                                <ColumnDefinition Width="2*" />
                                <!-- Start Date Label -->
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}"/>
                            <Label Grid.Column="1" Text="{Binding Name}" VerticalOptions="Center"/>
                            <Entry Grid.Column="2"
                                   Placeholder="EUR invested"
                                   Keyboard="Numeric"
                                   Text="{Binding InvestmentAmount, Mode=TwoWay}"
                                   VerticalOptions="Center" />
                            <Label Grid.Row="1" Grid.Column="1" Text="Start Date:" VerticalOptions="Center" />
                            <DatePicker Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                                        Date="{Binding StartDate, Mode=TwoWay}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Investment Day of Month" FontAttributes="Bold" />
            <Picker x:Name="dayPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int32}">
                        <x:Int32>15</x:Int32>
                        <x:Int32>20</x:Int32>
                        <x:Int32>25</x:Int32>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Calculate DCA" Clicked="OnCalculateClicked" />

            <Label x:Name="resultTitle" Text="Results" FontSize="Medium" FontAttributes="Bold" IsVisible="False" />

            <Grid Padding="5" ColumnSpacing="10" BackgroundColor="AntiqueWhite" Margin="0,5" 
                  IsVisible="{Binding Source={x:Reference resultsView}, Path=IsVisible}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Name" FontAttributes="Bold" />
                <Label Grid.Column="1" Text="Date" FontAttributes="Bold" />
                <Label Grid.Column="2" Text="Invested" FontAttributes="Bold" />
                <Label Grid.Column="3" Text="Coin Amount" FontAttributes="Bold" />
                <Label Grid.Column="4" Text="Value Today" FontAttributes="Bold" />
                <Label Grid.Column="5" Text="ROI" FontAttributes="Bold" />
            </Grid>

            <CollectionView x:Name="resultsView" IsVisible="False">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnSpacing="10" BackgroundColor="#f1f1f1" Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="{Binding Date}" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="{Binding InvestedText}" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="{Binding CoinAmountText}" VerticalOptions="Center" />
                            <Label Grid.Column="4" Text="{Binding ValueTodayText}" VerticalOptions="Center" />
                            <Label Grid.Column="5" Text="{Binding ROIText}" VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout x:Name="summary" IsVisible="False" Padding="10" BackgroundColor="BlueViolet">
                <Label x:Name="totalInvesteLabel" FontAttributes="Bold"/>
                <Label x:Name="totalCoinOwnedLabel" FontAttributes="Bold"/>
                <Label x:Name="currentValueLabel" FontAttributes="Bold"/>
                <Label x:Name="portofolioTotalLabel" FontAttributes="Bold"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>